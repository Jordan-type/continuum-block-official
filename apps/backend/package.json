{
  "name": "continuum-block-backend",
  "version": "0.0.1",
  "description": "continuum-block-backend",
  "type": "commonjs",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": "18.18.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prestart": "pnpm run build",
    "build": "pnpm add tsup && rimraf dist && tsup",
    "start": "pnpm run build && node dist/index.js",
    "dev": "pnpm run build && ts-node-dev --respawn --transpile-only ./src/index.ts",
    "dynamodb": "java -Djava.library.path=C:/dynamodb-local/DynamoDBLocal_lib -jar C:/dynamodb-local/DynamoDBLocal.jar -sharedDb -dbPath ./dynamodb-data",
    "seed": "ts-node ./src/seedMongodb/seedDB.ts"
  },
  "keywords": [],
  "author": "jordan-type",
  "license": "ISC",
