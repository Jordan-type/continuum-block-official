    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.0.9",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pluralize": "^8.0.0",
    "rimraf": "^3.0.2",
    "serverless-http": "^3.2.0",
    "socket.io": "^4.8.1",
    "stripe": "^17.4.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
